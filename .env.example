# 环境配置模板
# 复制此文件为 .env 并修改相应配置

# 应用配置
NODE_ENV=production
PORT=3000
APP_NAME=Xray转换器管理平台
APP_VERSION=1.0.0

# 数据库配置
DATABASE_URL=postgresql://xray_user:xray_password@localhost:5432/xray_converter
DB_HOST=localhost
DB_PORT=5432
DB_NAME=xray_converter
DB_USER=xray_user
DB_PASSWORD=xray_password

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 加密配置
ENCRYPTION_KEY=your-32-character-encryption-key-here
HASH_ROUNDS=12

# 文件上传配置
UPLOAD_MAX_SIZE=100MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=.json,.txt,.conf

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Docker配置
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_NETWORK=xray-network

# Shadowsocks配置
SS_DEFAULT_METHOD=aes-256-gcm
SS_PORT_RANGE_START=10000
SS_PORT_RANGE_END=20000

# SOCKS5配置
SOCKS5_TIMEOUT=300
SOCKS5_MAX_CONNECTIONS=1000

# 安全配置
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
SESSION_SECRET=your-session-secret-key

# 邮件配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=Xray转换器 <noreply@yourdomain.com>

# 监控配置 (可选)
ENABLE_METRICS=true
METRICS_PORT=9100
HEALTH_CHECK_INTERVAL=30

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# 外部服务配置
# Telegram Bot (可选)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# 钉钉机器人 (可选)
DINGTALK_WEBHOOK=

# 企业微信机器人 (可选)
WECHAT_WEBHOOK=

# 域名和SSL配置
DOMAIN=your-domain.com
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem

# 开发配置
DEBUG=false
ENABLE_SWAGGER=false
ENABLE_PLAYGROUND=false
